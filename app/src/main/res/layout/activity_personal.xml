<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grbj"
    tools:context="com.example.lenovo.hyapp.PersonalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/touxiang"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_showUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="用户名"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="#fdf6f6"
        android:paddingTop="8dp">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:paddingBottom="10dp"
            android:src="@drawable/dingdan"
            android:id="@+id/iv_guanli"
            android:onClick="toManageGoodsClick"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="管理商品"
            android:layout_marginLeft="28dp"
            android:textColor="#221f1f"
            android:textSize="12dp"

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#fdf6f6"
            android:paddingTop="8dp">
            <ImageView
                android:layout_width="101dp"
                android:layout_height="44dp"
                android:paddingBottom="10dp"
                android:src="@drawable/us"
                android:id="@+id/iv_denglu"
                android:onClick="toDengLuClick"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="登录"
                android:layout_marginLeft="28dp"
                android:textColor="#221f1f"
                android:textSize="12dp"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#fdf6f6"
        android:paddingTop="8dp">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="44dp"
            android:paddingBottom="10dp"
            android:id="@+id/iv_zhuce"
            android:src="@drawable/us"
            android:onClick="toZhuCeClick"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="注册"
            android:layout_marginLeft="28dp"
            android:textColor="#221f1f"
            android:textSize="12dp"
            />
    </LinearLayout>
</LinearLayout>